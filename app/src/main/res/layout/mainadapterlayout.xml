<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <com.remind.view.RotateImageView
        android:id="@+id/main_adapter_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/main_adapter_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/main_adapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:text="13:23 Jul.24"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/main_adapter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_adapter_classify"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:textColor="#fff"
        android:textSize="12sp" />

</RelativeLayout>